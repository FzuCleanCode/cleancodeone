<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout 
        android:id="@+id/activity_main_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/position"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:text="@string/position_service"/>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/activity_main_express"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/express"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:text="@string/express_service"/>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/activity_main_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/weather"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:text="@string/weather_forecast"/>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/activity_main_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/phone_number"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:text="@string/number_know_all"/>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/activity_main_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/play_fu_zhou"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:text="@string/play_fu_zhou"/>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
